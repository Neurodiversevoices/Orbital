# =============================================================================
# Orbital Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values

# -----------------------------------------------------------------------------
# RevenueCat Configuration
# Get your API keys from: https://app.revenuecat.com/projects/<your-project>/api-keys
# -----------------------------------------------------------------------------
EXPO_PUBLIC_REVENUECAT_IOS_KEY=appl_REPLACE_WITH_YOUR_IOS_KEY
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=goog_REPLACE_WITH_YOUR_ANDROID_KEY
EXPO_PUBLIC_REVENUECAT_WEB_KEY=rcb_REPLACE_WITH_YOUR_WEB_KEY

# -----------------------------------------------------------------------------
# Payments Kill-Switch
# Set to "true" to enable purchase buttons (requires valid RevenueCat keys)
# Set to anything else to show "Request Issuance" fallback
# -----------------------------------------------------------------------------
EXPO_PUBLIC_PAYMENTS_ENABLED=false

# -----------------------------------------------------------------------------
# Stripe Configuration (Web Payments)
# Get your keys from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_REPLACE_WITH_YOUR_KEY
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_YOUR_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_YOUR_SECRET

# Stripe Price IDs (create products in Stripe Dashboard, paste IDs here)
STRIPE_PRICE_PRO_MONTHLY=price_REPLACE
STRIPE_PRICE_PRO_ANNUAL=price_REPLACE
STRIPE_PRICE_CCI_FREE=price_REPLACE
STRIPE_PRICE_CCI_PRO=price_REPLACE
STRIPE_PRICE_CIRCLE_MONTHLY=price_REPLACE
STRIPE_PRICE_CIRCLE_ANNUAL=price_REPLACE
STRIPE_PRICE_CCI_CIRCLE=price_REPLACE
STRIPE_PRICE_CCI_BUNDLE=price_REPLACE
STRIPE_PRICE_BUNDLE_10=price_REPLACE
STRIPE_PRICE_BUNDLE_15=price_REPLACE
STRIPE_PRICE_BUNDLE_20=price_REPLACE

# -----------------------------------------------------------------------------
# Supabase Service Role (server-side only â€” NEVER expose to client)
# Used by Stripe webhook to write entitlements via service role bypass
# -----------------------------------------------------------------------------
SUPABASE_SERVICE_ROLE_KEY=eyJ_REPLACE_WITH_YOUR_SERVICE_ROLE_KEY

# -----------------------------------------------------------------------------
# Sentry (Error Monitoring)
# -----------------------------------------------------------------------------
# EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# -----------------------------------------------------------------------------
# API Endpoints (optional)
# -----------------------------------------------------------------------------
# EXPO_PUBLIC_API_URL=https://api.orbitalhealth.app

# -----------------------------------------------------------------------------
# Resend (Email)
# Required for contact form and waitlist emails
# -----------------------------------------------------------------------------
RESEND_API_KEY=
RESEND_FROM_EMAIL=
