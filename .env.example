# =============================================================================
# Orbital Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values

# -----------------------------------------------------------------------------
# RevenueCat Configuration
# Get your API keys from: https://app.revenuecat.com/projects/<your-project>/api-keys
# -----------------------------------------------------------------------------
EXPO_PUBLIC_REVENUECAT_IOS_KEY=appl_REPLACE_WITH_YOUR_IOS_KEY
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=goog_REPLACE_WITH_YOUR_ANDROID_KEY
EXPO_PUBLIC_REVENUECAT_WEB_KEY=rcb_REPLACE_WITH_YOUR_WEB_KEY

# -----------------------------------------------------------------------------
# Payment Mode (NEW - Stripe Integration)
# Values: "demo" (default), "test", "live"
# - demo: Simulated purchases, no real charges, ephemeral entitlements
# - test: Real Stripe checkout with test cards, durable entitlements
# - live: Real Stripe checkout with real cards, durable entitlements
# -----------------------------------------------------------------------------
EXPO_PUBLIC_PAYMENTS_MODE=demo

# -----------------------------------------------------------------------------
# Stripe Configuration (required for test/live modes)
# Get your keys from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
# Test mode keys (safe for development)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY_TEST=pk_test_REPLACE_WITH_YOUR_TEST_KEY
STRIPE_SECRET_KEY_TEST=sk_test_REPLACE_WITH_YOUR_TEST_SECRET
STRIPE_WEBHOOK_SECRET_TEST=whsec_REPLACE_WITH_YOUR_TEST_WEBHOOK_SECRET

# Live mode keys (production only)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_REPLACE_WITH_YOUR_LIVE_KEY
STRIPE_SECRET_KEY_LIVE=sk_live_REPLACE_WITH_YOUR_LIVE_SECRET
STRIPE_WEBHOOK_SECRET_LIVE=whsec_REPLACE_WITH_YOUR_LIVE_WEBHOOK_SECRET

# -----------------------------------------------------------------------------
# Supabase Configuration (required for durable entitlements in test/live)
# Get your keys from: https://app.supabase.com/project/_/settings/api
# -----------------------------------------------------------------------------
# Server-side (API routes) - NEVER expose SERVICE_ROLE_KEY to client
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.REPLACE_WITH_YOUR_SERVICE_KEY

# Client-side (browser/app) - safe to expose anon key
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.REPLACE_WITH_YOUR_ANON_KEY

# -----------------------------------------------------------------------------
# Legacy Payments Kill-Switch (deprecated - use EXPO_PUBLIC_PAYMENTS_MODE)
# Kept for backward compatibility
# -----------------------------------------------------------------------------
EXPO_PUBLIC_PAYMENTS_ENABLED=false

# -----------------------------------------------------------------------------
# Sentry (Error Monitoring)
# -----------------------------------------------------------------------------
# EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# -----------------------------------------------------------------------------
# API Endpoints (optional)
# -----------------------------------------------------------------------------
# EXPO_PUBLIC_API_URL=https://api.orbital.health
