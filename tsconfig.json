{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["jest"],
    "paths": {
      "orbital-widget": ["./modules/orbital-widget"],
      "orbital-widget/*": ["./modules/orbital-widget/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib/sentinel/__tests__",
    "tests/e2e",
    "scripts",
    "api"
  ]
}
